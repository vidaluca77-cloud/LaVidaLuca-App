{
  "name": "la-vida-luca-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/frontend",
    "build": "npm run build --workspace=apps/frontend",
    "start": "npm run start --workspace=apps/frontend",
    "lint": "npm run lint --workspace=apps/frontend",
    "test": "npm run test --workspace=apps/frontend",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "backend:dev": "cd apps/backend && python -m uvicorn src.main:app --reload",
    "backend:test": "cd apps/backend && python -m pytest"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
