{
  "name": "la-vida-luca",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "backend:install": "cd apps/backend && pip install -r requirements.txt",
    "backend:install:dev": "cd apps/backend && pip install -r requirements.txt -r requirements-dev.txt",
    "backend:dev": "cd apps/backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "backend:test": "cd apps/backend && pytest",
    "backend:test:unit": "cd apps/backend && pytest -m 'not integration and not security and not performance'",
    "backend:test:integration": "cd apps/backend && pytest -m integration",
    "backend:test:security": "cd apps/backend && pytest -m security",
    "backend:test:coverage": "cd apps/backend && pytest --cov=app --cov-report=html --cov-report=term-missing",
    "backend:test:watch": "cd apps/backend && pytest-watch",
    "backend:test:all": "cd apps/backend && ./run_tests.sh",
    "backend:performance": "cd apps/backend && locust -f app/tests/test_performance.py --host=http://localhost:8000",
    "backend:security-scan": "cd apps/backend && ./run_tests.sh --security-scan",
    "backend:migrate": "cd apps/backend && alembic upgrade head",
    "backend:migration": "cd apps/backend && alembic revision --autogenerate",
    "backend:docs": "cd apps/backend && echo 'API docs available at http://localhost:8000/docs'",
    "setup": "npm install && npm run backend:install",
    "setup:dev": "npm install && npm run backend:install:dev",
    "test:all": "npm run test && npm run backend:test",
    "test:all:coverage": "npm run test:coverage && npm run backend:test:coverage",
    "dev:full": "concurrently \"npm run dev\" \"npm run backend:dev\"",
    "ci:test": "npm run backend:test:all"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@sentry/nextjs": "^10.5.0",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "jest": "^30.0.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.3.3"
  }
}
