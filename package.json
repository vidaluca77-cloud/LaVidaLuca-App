{
  "name": "la-vida-luca",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && npm run web:lint",
    "type-check": "tsc --noEmit && npm run web:type-check",
    "test": "jest && npm run web:test && npm run backend:test",
    "test:coverage": "jest --coverage && npm run web:test:coverage && npm run backend:test:coverage",
    "test:watch": "jest --watch",
    "clean": "rm -rf .next node_modules apps/web/.next apps/web/node_modules apps/backend/__pycache__ apps/backend/.pytest_cache",
    "web:dev": "cd apps/web && npm run dev",
    "web:build": "cd apps/web && npm run build",
    "web:start": "cd apps/web && npm run start",
    "web:lint": "cd apps/web && npm run lint",
    "web:type-check": "cd apps/web && npm run type-check",
    "web:test": "cd apps/web && npm run test",
    "web:test:coverage": "cd apps/web && npm run test:coverage",
    "backend:install": "cd apps/backend && pip install -r requirements.txt",
    "backend:dev": "cd apps/backend && python main.py",
    "backend:test": "cd apps/backend && python -m pytest tests/ -v",
    "backend:test:coverage": "cd apps/backend && python -m pytest tests/ --cov=. --cov-report=html --cov-report=term",
    "backend:migrate": "cd apps/backend && alembic upgrade head",
    "backend:migration": "cd apps/backend && alembic revision --autogenerate",
    "backend:docs": "cd apps/backend && echo 'API docs available at http://localhost:8000/docs'",
    "ia:dev": "cd apps/ia && python main.py",
    "ia:test": "cd apps/ia && python -m pytest tests/ -v",
    "setup": "npm install && cd apps/web && npm install && npm run backend:install",
    "setup:venv": "cd apps/backend && python -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt",
    "dev:full": "concurrently \"npm run backend:dev\" \"npm run web:dev\" \"npm run ia:dev\"",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v --rmi all"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@sentry/nextjs": "^10.5.0",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
