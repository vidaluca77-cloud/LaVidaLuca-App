# La Vida Luca - Frontend Environment Configuration
# Copy this file to .env.local and update with your actual values

# Node Environment
NODE_ENV=development

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
# For production, use: https://lavidaluca-backend.onrender.com

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production, use: https://lavidaluca.fr

# Sentry Configuration (Error Monitoring)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Suppress Sentry warnings in development
SENTRY_SUPPRESS_GLOBAL_ERROR_HANDLER_FILE_WARNING=1

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=contact@lavidaluca.fr
NEXT_PUBLIC_CONTACT_PHONE=+33123456789

# Feature Flags
NEXT_PUBLIC_ENABLE_MONITORING=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=true

# OpenAI Integration (if used in frontend)
NEXT_PUBLIC_OPENAI_ENABLED=false

# Social Media Links
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/lavidaluca
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/lavidaluca
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/lavidaluca

# Analytics (if implemented)
NEXT_PUBLIC_GA_TRACKING_ID=your_ga_tracking_id
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# Development Settings
NEXT_TELEMETRY_DISABLED=1

# Build Configuration
NEXT_PUBLIC_BUILD_TIME=auto_generated_at_build_time
NEXT_PUBLIC_VERSION=1.0.0