# LaVidaLuca Environment Variables
# Copy this file to .env and fill in the actual values

# Database Configuration (for local development)
DATABASE_URL=postgresql://postgres:password@localhost:5432/lavidaluca

# Backend Configuration
SECRET_KEY=your-very-secure-secret-key-for-jwt-signing
OPENAI_API_KEY=sk-your-openai-api-key-here
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Frontend Configuration
NEXT_PUBLIC_IA_API_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
NEXT_PUBLIC_CONTACT_EMAIL=contact@lavidaluca.fr
NEXT_PUBLIC_CONTACT_PHONE=+33123456789

# Production Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Deployment URLs
VERCEL_URL=https://your-app.vercel.app
RENDER_BACKEND_URL=https://your-backend.onrender.com

# Development Settings
NODE_ENV=development
DEBUG=true