# La Vida Luca App - Environment Configuration
# This is the root environment file for development setup

# Quick Start:
# 1. Copy this file to .env
# 2. Update the values below for your local environment
# 3. Copy apps/backend/.env.example to apps/backend/.env and configure backend
# 4. Copy apps/web/.env.local.example to apps/web/.env.local and configure frontend

# Global Settings
APP_NAME=La Vida Luca
APP_VERSION=1.0.0
ENVIRONMENT=development

# Database Configuration (shared by backend)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=lavidaluca_dev

# API Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
IA_SERVICE_PORT=8001

# Security
JWT_SECRET_KEY=generate-a-secure-random-key-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ALLOWED_HOSTS=localhost,127.0.0.1,lavidaluca.fr,*.lavidaluca.fr
CORS_ORIGINS=http://localhost:3000,https://lavidaluca.fr,https://*.lavidaluca.fr

# External Services
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500

# Monitoring and Error Tracking
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_MINUTE_ANONYMOUS=20

# Email Configuration
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@lavidaluca.fr

# Development URLs
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_IA_API_URL=http://localhost:8001

# Production URLs (update these for deployment)
PRODUCTION_API_URL=https://your-backend.render.com/api/v1
PRODUCTION_FRONTEND_URL=https://your-app.vercel.app