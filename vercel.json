{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": {
      "description": "URL de votre projet Supabase",
      "required": true
    },
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": {
      "description": "Clé anonyme de votre projet Supabase", 
      "required": true
    },
    "NEXT_PUBLIC_IA_API_URL": {
      "description": "URL de l'API IA déployée sur Render",
      "required": true
    },
    "NEXT_PUBLIC_CONTACT_EMAIL": {
      "description": "Email de contact pour la plateforme",
      "required": true
    },
    "NEXT_PUBLIC_CONTACT_PHONE": {
      "description": "Téléphone de contact pour la plateforme",
      "required": true
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
}