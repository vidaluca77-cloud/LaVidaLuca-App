[flake8]
max-line-length = 88
extend-ignore = E203, E501, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    env,
    build,
    dist,
    *.egg-info

per-file-ignores =
    # Tests can have longer lines and unused imports
    tests/*:E501,F401
    # __init__.py files can have unused imports
    __init__.py:F401