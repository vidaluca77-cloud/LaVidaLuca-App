# FastAPI LaVidaLuca API Configuration
# Copy this file to .env and fill in your actual values

# API Settings
DEBUG=True
API_V1_STR=/api/v1
PROJECT_NAME=LaVidaLuca API

# CORS Settings (comma-separated URLs)
ALLOWED_ORIGINS=http://localhost:3000,https://la-vida-luca.vercel.app

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/lavidaluca

# Authentication Settings
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# OpenAI Settings (optional - fallback algorithm will be used if not provided)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Supabase Settings (alternative to direct PostgreSQL)
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key