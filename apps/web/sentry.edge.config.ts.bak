// This file configures the initialization of Sentry for edge runtime.
// The config you add here will be used whenever the edge runtime is used.
// Note that this file will not be used when the Pages Router is used.
// https://docs.sentry.io/platforms/javascript/guides/nextjs/

import * as Sentry from "@sentry/nextjs";

const SENTRY_DSN = process.env.NEXT_PUBLIC_SENTRY_DSN;

Sentry.init({
  dsn: SENTRY_DSN,
  
  // Performance monitoring for edge runtime
  tracesSampleRate: process.env.NODE_ENV === 'production' ? 0.05 : 1.0,
  
  // Environment and release
  environment: process.env.NEXT_PUBLIC_ENVIRONMENT || 'development',
  release: process.env.NEXT_PUBLIC_APP_VERSION || '1.0.0',
  
  // Debugging
  debug: process.env.NODE_ENV === 'development',
  
  // Edge runtime specific configurations
  beforeSend(event) {
    // Filter sensitive data
    if (event.request?.headers) {
      delete event.request.headers.authorization;
      delete event.request.headers.cookie;
    }
    
    return event;
  },
  
  // Initial scope
  initialScope: {
    tags: {
      component: 'frontend-edge',
      service: 'la-vida-luca-web',
    },
  },
});