# Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lavidaluca_dev
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=lavidaluca_dev
POSTGRES_PORT=5432

# Security & Authentication
SECRET_KEY=your-super-secret-backend-key-change-in-production
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS & Security
CORS_ORIGINS=["http://localhost:3000","https://lavidaluca.vercel.app","https://*.vercel.app"]
CORS_ALLOW_CREDENTIALS=true
CORS_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_HEADERS=["*"]
ALLOWED_HOSTS=["localhost","127.0.0.1","lavidaluca-backend.onrender.com"]

# Production Security Settings
SECURE_COOKIES=false
SECURE_HEADERS=false
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Sentry Configuration for Backend Monitoring
SENTRY_DSN=your-sentry-backend-dsn-here
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0
SENTRY_TRACES_SAMPLE_RATE=0.1

# OpenAI Integration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_MINUTE_ANONYMOUS=20

# Logging
LOG_LEVEL=INFO

# Health Check
HEALTH_CHECK_ENABLED=true

# Email Configuration (for contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@lavidaluca.fr