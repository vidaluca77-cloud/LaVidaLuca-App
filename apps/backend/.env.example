# Environment Variables Template
# Copy this file to .env and update with your configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/lavidaluca
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=lavidaluca
POSTGRES_PORT=5432

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=4320

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Supabase Configuration (optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Email Configuration (optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@lavidaluca.com
EMAILS_FROM_NAME=LaVidaLuca

# First Superuser
FIRST_SUPERUSER=admin@lavidaluca.com
FIRST_SUPERUSER_PASSWORD=changethis

# Environment
ENVIRONMENT=development