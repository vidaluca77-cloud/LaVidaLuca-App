# Environment variables for La Vida Luca backend

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/lavidaluca
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/lavidaluca_test

# Authentication
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://lavidaluca.fr

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# Email (for contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@lavidaluca.fr

# Rate limiting
RATE_LIMIT_PER_MINUTE=100

# File upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads